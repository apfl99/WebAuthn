{
  "manifest_version": 3,
  "name": "Credential Saver",
  "version": "1.0",
  "description": "Save and display login credentials",
  "permissions": ["storage", "activeTab", "webNavigation", "webRequest"],
  "action": {
    "default_popup": "saveLoginData.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
